<odoo>
    <template id="report_boq_pdf">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <style>
                    .tg {border-collapse:collapse;border-spacing:0;}
                    .tg td {border-color:black;border-style:solid;border-width:1px;font-family:Arial,
                    sans-serif;font-size:14px;overflow:hidden;padding:10px 5px;word-break:normal;}
                    .table {border-color:black;border-style:solid;border-width:1px;font-family:Arial,
                    sans-serif;font-size:11px;font-weight:normal;overflow:hidden;padding:10px 5px;word-break:normal;
                    text-align:center;vertical-align:center;}
                </style>
                <t t-call="web.basic_layout">
                    <div class="page">
                        <table class="header">
                            <tr>
                                <td>Vendor Name</td>
                                <td>: </td>
                                <td><t t-esc="o.partner_id.name"/></td>
                                <td>No SPK</td>
