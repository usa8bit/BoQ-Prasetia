<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="paperformat_report_boq_pdf" model="report.paperformat">
    <field name="name">Custom Paperformat for BoQ</field>
    <field name="default" eval="False"/>
    <field name="disable_shrinking" eval="True"/>
    <field name="format">A4</field>
    <field name="page_height">0</field>
    <field name="page_width">0</field>
    <!-- this one is to make the pdf to become horizontal, if landscape=False, pdf will become vertical -->
    <field name="orientation">Landscape</field>
    <field name="margin_top">8</field>
    <field name="margin_bottom">8</field>
    <field name="margin_left">0</field>
    <field name="margin_right">0</field>
    <field name="dpi">96</field>
</record>
</odoo>