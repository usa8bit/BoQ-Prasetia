<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_bill_of_quantity_tree" model="ir.ui.view">
        <field name="name">bill.of.quantity.tree</field>
        <field name="model">bill.of.quantity</field>
        <field name="arch" type="xml">
            <tree string="Bill of Quantity">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="project_id"/>
                <field name="site_name"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>


    <record id="view_bill_of_quantity_search" model="ir.ui.view">
        <field name="name">bill.of.quantity.search</field>
        <field name="model">bill.of.quantity</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="site_name"/>
            </search>
        </field>
    </record>

    <record id="view_bill_of_quantity_form" model="ir.ui.view">
        <field name="name">bill.of.quantity.form</field>
        <field name="model">bill.of.quantity</field>
        <field name="arch" type="xml">
            <form string="Bill of Quantity">
                <header>
                    <button id="button_draft" name="action_draft" string="Set to Draft" type="object" states="cancel" groups="bill_of_quantity_prasetia.group_draft_user"/>
                    <button id="button_confirm" name="action_confirm" string="Confirm" class="btn-primary" type="object" states="draft" groups="bill_of_quantity_prasetia.group_confirm_user"/>
                    <button id="button_logistic" name="action_logistic" string="Approve" class="btn-primary" type="object" states="confirm" groups="bill_of_quantity_prasetia.group_logistic_user"/>
                    <button id="button_cancel" name="action_cancel" string="Cancel" type="object" states="draft,confirm" groups="bill_of_quantity_prasetia.group_cancel_user"/>
                    <button id="button_vendor" name="action_vendor" string="Approve" class="btn-primary" type="object" states="logistic" groups="bill_of_quantity_prasetia.group_vendor_user"/>
                    <button id="button_lead" name="action_lead" string="Approve" class="btn-primary" type="object" states="vendor" groups="bill_of_quantity_prasetia.group_lead_user"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft, confirm, logistic, vendor"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" attrs="{'readonly': [('state','not in', ['draft'])]}"/>
                            <field name="project_id" attrs="{'readonly': [('state','not in', ['draft'])]}"/>
                            <field name="site_name"/>
                            <field name="area"/>
                            <field name="project_type_id" attrs="{'readonly': [('state','not in', ['draft'])]}"/>
                        </group>
                        <group>
                            <field name="spk_id" attrs="{'readonly': [('state','not in', ['draft'])]}"/>
                            <field name="date" attrs="{'readonly': [('state','not in', ['draft'])]}"/>
                            <field name="spk_total" widget="monetary" attrs="{'readonly': [('state','not in', ['draft'])]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="line" string="BoQ Lines">
                            <separator string="Standard"/>
                            <field name="standard_ids">
                                <tree editable="bottom">
                                    <field name="product_id" width="200px" attrs="{'readonly': [('state','not in', ['draft'])]}"/>
                                    <field name="description" width="200px"/>
                                    <field name="unit" width="100px"/>
                                    <field name="qty_contract" width="150px" attrs="{'readonly': [('state','not in', ['draft'])]}"/>
                                    <field name="unit_price" width="200px" attrs="{'readonly': [('state','not in', ['draft'])]}"/>
                                    <field name="total_price_contract" width="200px"/>
                                    <field name="qty_in" width="100px" attrs="{'readonly': [('state','not in', ['confirm'])]}"/>
                                    <field name="qty_out" width="100px" attrs="{'readonly': [('state','not in', ['confirm'])]}"/>
                                    <field name="qty_implementation" width="200px" attrs="{'readonly': [('state','not in', ['logistic'])]}"/>
                                    <field name="qty_proposed" width="150px"/>
                                    <field name="qty_deal" width="150px"/>
                                    <field name="total_price_deal" width="200px"/>
                                    <field name="qty_diff" width="200px"/>
                                    <field name="total_price_diff" width="300px"/>
                                    <field name="state" invisible="1"/>
                                </tree>
                            </field>
                            <separator string="Non Standard"/>
                            <field name="non_standard_ids">
                                <tree editable="bottom" delete="false">
                                    <field name="product_id" width="200px" attrs="{'readonly': [('state','not in', ['draft'])]}"/>
                                    <field name="description" width="200px"/>
                                    <field name="unit" width="100px"/>
                                    <field name="qty_contract" width="150px" attrs="{'readonly': [('state','not in', ['draft'])]}"/>
                                    <field name="unit_price" width="200px" attrs="{'readonly': [('state','not in', ['draft'])]}"/>
                                    <field name="total_price_contract" width="200px"/>
                                    <field name="qty_in" width="100px" attrs="{'readonly': [('state','not in', ['confirm'])]}"/>
                                    <field name="qty_out" width="100px" attrs="{'readonly': [('state','not in', ['confirm'])]}"/>
                                    <field name="qty_implementation" width="200px" attrs="{'readonly': [('state','not in', ['logistic'])]}"/>
                                    <field name="qty_proposed" width="150px"/>
                                    <field name="qty_deal" width="150px"/>
                                    <field name="total_price_deal" width="200px"/>
                                    <field name="qty_diff" width="200px"/>
                                    <field name="total_price_diff" width="300px"/>
                                    <field name="state" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>

            </form>
        </field>
    </record>


    <record id="bill_of_quantity_action" model="ir.actions.act_window">
        <field name="name">Bill of Quantity</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bill.of.quantity</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="bill_of_quantity_menu"
              name="Bill of Quantity"
              parent="menu_bill_of_quantity_root"
              action="bill_of_quantity_action"
              sequence="10"/>
</odoo>
